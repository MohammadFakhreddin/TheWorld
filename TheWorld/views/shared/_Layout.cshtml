<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>The world - @ViewBag.Title</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />@*for custumization out stylesheet must be after bootsrap file to override *@
    <link rel="stylesheet" href="~/lib/bootswatch/yeti/bootstrap.min.css" />
    <link rel="stylesheet" href="~/lib/font-awesome/css/font-awesome.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <div id="sidebar">
        @if (User.Identity.IsAuthenticated)
        {
        <div>
            <img src="~/img/L2.png" alt="headshot" class="headshot" />
        </div>
        <div class="text">
            <div id="needMargin">
                <span id="myname">@User.Identity.Name</span>
            </div>
        </div>
        }
        <ul class="nav">
            @*<li class="Active"><a href="/">HOME</a></li>
            <li><a href="/app/about">About</a></li>
            <li><a href="/app/contact">Contact</a></li>*@
            <li class="Active"><a asp-controller="app" asp-action="Index">HOME</a></li>
            <li><a asp-controller="app" asp-action ="About">About</a></li>
            <li><a asp-controller="app" asp-action="Contact">Contact</a></li>
            @if (User.Identity.IsAuthenticated) {
                <li><a asp-controller="app" asp-action="Trips">Trips</a></li>
                <li><a asp-controller="auth" asp-action="Logout">Logout</a></li>
            }
        </ul>
    </div>
    <div id="wrapper">
        <nav class="navbar navbar-inverse" >
            <div class="container-fluid">
                <ul class="nav navbar-nav navbar-left">
                    <li>
                        <button id="sidebarToggle" class="btn btn-primary">
                            <i class="fa fa-angle-left"></i>
                        </button>
                    </li>
                </ul>
                <a asp-controller="app" asp-action="index" class="navbar-brand">The World</a>
                <ul class="nav navbar-nav navbar-right">
                    <li>
                        <a href="#" class="btn btn-sm btn-info">
                            <i class="fa fa-save"></i>Save
                        </a>
                    </li>
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    <li>
                        <a href="#" class="btn btn-sm btn-info">
                            <i class="fa fa-print"></i>Print
                        </a>
                    </li>
                </ul>
            </div>
        </nav>
        <div id="header" class="container-fluid">
            
        </div>
        @RenderBody()
        <div id="footer" class="container-fluid">
            <div class="navbar navbar-inverse navbar-fixed-bottom">
                <h4 class="text-info text-center">&copy; 2015 MAMAD Ltd</h4>
            </div>
        </div>
    </div>
    <!--Scripts must be at end of text It tells parser
        To wait until our work is ready-->
    <script type="text/javascript" src="~/lib/jQuery/dist/jquery.min.js"></script>
    <script type="text/javascript" src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
    
    @RenderSection("scripts", false)<!--It is false cause if scripts does not exists no problem happens-->
    <environment names="Development">
        <script type="text/javascript" src="~/js/site.js"></script>
    </environment>
    <environment names ="Production,Staging">
        <script type="text/javascript"src="~/lib/_app/site.js"></script>
    </environment>
</body>
</html>